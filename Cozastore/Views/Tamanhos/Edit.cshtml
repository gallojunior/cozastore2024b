@model Cozastore.Models.Tamanho
@{
    ViewData["Title"] = "Tamanhos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Alterar</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <form asp-action="Edit" method="post" class="row">
                    <input type="hidden" asp-for="Id" >
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>
                        <span asp-validation-for="Nome" class="text-danger text-sm"></span>
                    </div>
                    <div class="col-12">
                        <div class="input-group input-group-outline">
                            <label asp-for="Sigla" class="form-label"></label>
                            <input asp-for="Sigla" class="form-control" />
                        </div>
                        <span asp-validation-for="Sigla" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="mt-3">
                        <input type="submit" value="Salvar" class="btn btn-success me-3" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
