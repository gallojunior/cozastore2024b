@model Cozastore.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 mb-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-lg-9 col-md-7">
                        <div class="input-group input-group-outline mb-4">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" readonly/>
                        </div>
                        <div class="input-group input-group-outline mb-4 is-focused">
                            <label asp-for="CategoriaPaiId" class="form-label"></label>
                            <input asp-for="CategoriaPai.Nome" class="form-control" readonly>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-6">
                                <div class="form-check form-switch d-flex align-items-center mb-3">
                                    <input class="form-check-input" type="checkbox" asp-for="Filtrar" disabled>
                                    <label class="form-check-label mb-0 ms-3" asp-for="Filtrar"></label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-check form-switch d-flex align-items-center mb-3">
                                    <input class="form-check-input" type="checkbox" asp-for="Banner" disabled>
                                    <label class="form-check-label mb-0 ms-3" asp-for="Banner"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <img src='@(Model.Foto ?? Url.Content("~/img/sem-foto.jfif"))' class="w-100" alt="Foto">
                    </div>
                    <div class="mb-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Alterar</a>
                        <a asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
